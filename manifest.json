{
  "manifest_version": 3,
  "name": "护眼阅读",
  "version": "1.0",

  "icons": { "40": "icon40.png" },
  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
  	"default_icon": {                
		"40": "icon40.png"
	}
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "MacCtrl+B"
      },
      "description": "Opens hello.html"
    }
  }
}
